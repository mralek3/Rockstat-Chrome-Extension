{
	"manifest_version": 2,
	"name": "Rockstat",
	"description": "Rockstat позволяет визуально отслеживать запросы t4k, не открывая консоль chrome",
	"version": "1.0.0",
	
	"icons": {
		"128": "images/icon128.png"
	},
	
	"background": {
		"scripts": [
			"background.js"
		]
	},
	
	"browser_action": {
		"default_icon": "images/icon.png"
	},
	
	"permissions": [
		"https://*/*",
		"http://*/*",
		"tabs",
		"webRequest"
	]
}